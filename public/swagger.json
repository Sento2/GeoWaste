{
  "openapi": "3.0.3",
  "info": {
    "title": "GeoWaste API",
    "description": "API untuk sistem manajemen titik limbah dan pelaporan lingkungan. Terintegrasi dengan Nominatim (OpenStreetMap) untuk geocoding dan OpenWeatherMap untuk data cuaca.",
    "version": "1.0.0",
    "contact": {
      "name": "GeoWaste Team",
      "email": "admin@geowaste.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Development Server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Autentikasi pengguna"
    },
    {
      "name": "Users",
      "description": "Manajemen pengguna (Admin only)"
    },
    {
      "name": "Waste Points",
      "description": "Manajemen titik limbah"
    },
    {
      "name": "Reports",
      "description": "Pelaporan limbah"
    },
    {
      "name": "External",
      "description": "Integrasi API eksternal (Geocoding & Weather)"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Masukkan token JWT yang didapat dari endpoint login"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "role": {
            "type": "string",
            "enum": ["admin", "petugas", "warga"],
            "example": "warga"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "WastePoint": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "name": {
            "type": "string",
            "example": "TPA Kawatuna"
          },
          "description": {
            "type": "string",
            "example": "Tempat pembuangan akhir sampah kota"
          },
          "waste_type": {
            "type": "string",
            "enum": ["organik", "anorganik", "B3", "campuran"],
            "example": "campuran"
          },
          "coordinates": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "example": [-0.9098, 119.9369]
          },
          "status": {
            "type": "string",
            "enum": ["baru", "ditinjau", "selesai"],
            "example": "baru"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Report": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439011"
          },
          "site_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439012"
          },
          "reporter_id": {
            "type": "string",
            "example": "507f1f77bcf86cd799439013"
          },
          "description": {
            "type": "string",
            "example": "Sampah menumpuk sejak pagi"
          },
          "photo_url": {
            "type": "string",
            "example": "https://example.com/photo.jpg"
          },
          "status": {
            "type": "string",
            "enum": ["baru", "diproses", "selesai"],
            "example": "baru"
          },
          "reported_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "EnvSummary": {
        "type": "object",
        "properties": {
          "lat": {
            "type": "number",
            "example": -0.9098
          },
          "lon": {
            "type": "number",
            "example": 119.9369
          },
          "address": {
            "type": "object",
            "properties": {
              "display_name": {
                "type": "string",
                "example": "Jalan TPA Kawatuna, Masomba, Palu, Sulawesi Tengah, Indonesia"
              },
              "road": {
                "type": "string"
              },
              "village": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "country": {
                "type": "string"
              }
            }
          },
          "weather": {
            "type": "object",
            "properties": {
              "temp": {
                "type": "number",
                "example": 24.79
              },
              "feels_like": {
                "type": "number",
                "example": 25.67
              },
              "humidity": {
                "type": "integer",
                "example": 90
              },
              "wind_speed": {
                "type": "number",
                "example": 1.88
              },
              "description": {
                "type": "string",
                "example": "awan mendung"
              },
              "icon": {
                "type": "string",
                "example": "04d"
              }
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Unauthorized"
          },
          "message": {
            "type": "string",
            "example": "Token tidak valid"
          }
        }
      }
    }
  },
  "paths": {
    "/api/v1/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register pengguna baru",
        "description": "Mendaftarkan pengguna baru dengan role default 'warga'",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "john@example.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "example": "password123"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["admin", "petugas", "warga"],
                    "default": "warga"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Registrasi berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User registered"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email sudah terdaftar"
          }
        }
      }
    },
    "/api/v1/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login pengguna",
        "description": "Autentikasi pengguna dan mendapatkan token JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "admin@geowaste.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "admin123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login success"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Email atau password salah"
          }
        }
      }
    },
    "/api/v1/me": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get current user",
        "description": "Mendapatkan data pengguna yang sedang login",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Data user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/users": {
      "get": {
        "tags": ["Users"],
        "summary": "List semua users",
        "description": "Mendapatkan daftar semua pengguna (Admin only)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Daftar users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/User"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Tambah user baru",
        "description": "Membuat user baru (Admin only)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password", "role"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["admin", "petugas", "warga"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User berhasil dibuat"
          },
          "403": {
            "description": "Forbidden - Admin only"
          }
        }
      }
    },
    "/api/v1/users/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user by ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "User tidak ditemukan"
          }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update user",
        "description": "Update data user (Admin only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["admin", "petugas", "warga"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User berhasil diupdate"
          },
          "404": {
            "description": "User tidak ditemukan"
          }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Hapus user",
        "description": "Menghapus user (Admin only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User berhasil dihapus"
          },
          "404": {
            "description": "User tidak ditemukan"
          }
        }
      }
    },
    "/api/v1/wastepoints": {
      "get": {
        "tags": ["Waste Points"],
        "summary": "List semua titik limbah",
        "description": "Mendapatkan daftar semua titik limbah dengan filter opsional",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "waste_type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["organik", "anorganik", "B3", "campuran"]
            },
            "description": "Filter berdasarkan jenis limbah"
          },
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["baru", "ditinjau", "selesai"]
            },
            "description": "Filter berdasarkan status"
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Daftar titik limbah",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/WastePoint"
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "page": { "type": "integer" },
                        "limit": { "type": "integer" },
                        "total": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Waste Points"],
        "summary": "Tambah titik limbah baru",
        "description": "Membuat titik limbah baru (Admin/Petugas only)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "waste_type", "coordinates"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "TPA Kawatuna"
                  },
                  "description": {
                    "type": "string",
                    "example": "Tempat pembuangan akhir"
                  },
                  "waste_type": {
                    "type": "string",
                    "enum": ["organik", "anorganik", "B3", "campuran"]
                  },
                  "coordinates": {
                    "type": "array",
                    "items": { "type": "number" },
                    "example": [-0.9098, 119.9369],
                    "description": "[latitude, longitude]"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Titik limbah berhasil dibuat"
          },
          "403": {
            "description": "Forbidden - Admin/Petugas only"
          }
        }
      }
    },
    "/api/v1/wastepoints/{id}": {
      "put": {
        "tags": ["Waste Points"],
        "summary": "Update titik limbah",
        "description": "Update data titik limbah (Admin/Petugas only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "waste_type": {
                    "type": "string",
                    "enum": ["organik", "anorganik", "B3", "campuran"]
                  },
                  "coordinates": {
                    "type": "array",
                    "items": { "type": "number" }
                  },
                  "status": {
                    "type": "string",
                    "enum": ["baru", "ditinjau", "selesai"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Titik limbah berhasil diupdate"
          },
          "404": {
            "description": "Titik limbah tidak ditemukan"
          }
        }
      },
      "delete": {
        "tags": ["Waste Points"],
        "summary": "Hapus titik limbah",
        "description": "Menghapus titik limbah (Admin only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Titik limbah berhasil dihapus"
          },
          "404": {
            "description": "Titik limbah tidak ditemukan"
          }
        }
      }
    },
    "/api/v1/reports": {
      "get": {
        "tags": ["Reports"],
        "summary": "List semua laporan",
        "description": "Mendapatkan daftar semua laporan",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "site_id",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filter berdasarkan ID titik limbah"
          },
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["baru", "diproses", "selesai"]
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer", "default": 1 }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer", "default": 20 }
          }
        ],
        "responses": {
          "200": {
            "description": "Daftar laporan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Report"
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "page": { "type": "integer" },
                        "limit": { "type": "integer" },
                        "total": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Reports"],
        "summary": "Buat laporan baru",
        "description": "Membuat laporan baru untuk titik limbah tertentu",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["site_id", "description"],
                "properties": {
                  "site_id": {
                    "type": "string",
                    "description": "ID titik limbah yang dilaporkan"
                  },
                  "description": {
                    "type": "string",
                    "example": "Sampah menumpuk sejak pagi"
                  },
                  "photo_url": {
                    "type": "string",
                    "example": "https://example.com/photo.jpg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Laporan berhasil dibuat"
          }
        }
      }
    },
    "/api/v1/reports/{id}/status": {
      "patch": {
        "tags": ["Reports"],
        "summary": "Update status laporan",
        "description": "Mengubah status laporan (Admin/Petugas only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["status"],
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["baru", "diproses", "selesai"],
                    "example": "diproses"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status berhasil diupdate"
          },
          "400": {
            "description": "Status tidak valid"
          },
          "404": {
            "description": "Laporan tidak ditemukan"
          }
        }
      }
    },
    "/api/v1/reports/{id}": {
      "delete": {
        "tags": ["Reports"],
        "summary": "Hapus laporan",
        "description": "Menghapus laporan (Admin only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Laporan berhasil dihapus"
          },
          "404": {
            "description": "Laporan tidak ditemukan"
          }
        }
      }
    },
    "/external/env-summary": {
      "get": {
        "tags": ["External"],
        "summary": "Analisis lingkungan",
        "description": "Mendapatkan informasi alamat (via Nominatim/OpenStreetMap) dan cuaca (via OpenWeatherMap) berdasarkan koordinat",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "lat",
            "in": "query",
            "required": true,
            "schema": { "type": "number" },
            "example": -0.9098,
            "description": "Latitude koordinat"
          },
          {
            "name": "lon",
            "in": "query",
            "required": true,
            "schema": { "type": "number" },
            "example": 119.9369,
            "description": "Longitude koordinat"
          }
        ],
        "responses": {
          "200": {
            "description": "Data lingkungan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "OK" },
                    "data": {
                      "$ref": "#/components/schemas/EnvSummary"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parameter lat/lon tidak valid"
          }
        }
      }
    }
  }
}
